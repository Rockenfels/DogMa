<h1>Here's the organization's information</h1>
<% #ADD PHOTO %>
<h2>Name: <%= @shelter.name %></h2>
<h2>Home State: <%= @shelter.home_state %></h2>
<h2>Dogs: </h2>
<br>
<div class="dog-box">
  <% @shelter.dogs.each do |dog| %>
    <div class="dog-tile">
      <% #ADD PHOTO %>
      <h3><%= dog.name %>, <%= dog.age %></h3>
      <h3><%= dog.breed %></h3>
      <%= form_with model: dog do |f| %>
        <%= f.hidden_field @shelter, @shelter.id %>
        <%= f.hidden_field dog, dog.id %>
        <%= f.button_to 'Adopt!', new_adoption_path %>
      <% end %>
    </div>
  <% end %>
</div>
