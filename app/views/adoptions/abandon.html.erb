<h1>Here's a last look at your surrender: </h1>
<h2>Owner: <%= @owner.name %></h2>
<%= form_for @adoption, url: 'adoptions' do |f| %>
<%= f.label  %>
<input list="shelters" id="shelter-choice" name="shelter-choice" />

<datalist id="shelters">
  <% Shelter.all.each do |shelter| %>
    <option value=<%= shelter.name %>>
  <% end %>
</datalist>
<h2>  Dog to be surrendered: <%= f.text_field @dog.name, disabled: true %></h2>
  <ol>
    <li>Age: <%= @dog.age %></li>
    <li>Breed: <%= @dog.breed %></li>
    <li>Gender: <%= @dog.gender %></li>
    <li>Description: <%= @dog.description %></li>
  </ol>

<h2>  Confirmation of Transfer: <%= f.check_box_tag @adoption.owner_conf, 'confirmed', 'true', disabled: true %></h2>
  <%= f.hidden_field @dog, @dog.id %>
  <%= f.submit "Say goodbye" %>
<% end %>
<%= button_to owner_path(@owner), 'I\'m not ready yet...' %>
