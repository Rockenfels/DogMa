<h1>Here's your information</h1>
<% #ADD PHOTO %>
<h3>Name: <%= @owner.name %></h3>
<h3>Email: <%= @owner.email %></h3>
<h3>Home State: <%= @owner.home_state %></h3>
<h3>Dogs: </h3>
<br>
<div class="dog-box">
  <% @owner.dogs.each do |dog| %>
    <div class="dog-tile">
      <% #ADD PHOTO %>
      <h4><%= dog.name %>, <%= dog.age %></h4>
      <h4><%= dog.breed %></h4>
      <h4><a href=<%= edit_dog_path(dog.id) %>>Edit my info</a></h4>
      <h4><%= button_to "Remove Dog", { action: "delete", id: dog.id }, method: :delete, data: { confirm: "Are you sure?" }%></h4>
    </div>
  <% end %>
</div>

<h2><a href=<%= edit_owner_path(@owner.id) %>>Edit your info</a></h2>
<h2><%= button_to "Delete Account", { action: "delete", id: @owner.id }, method: :delete, data: { confirm: "Are you sure?" } %></h2>
