<h1>Here's your information</h1>
<% #ADD PHOTO %>
<h3>Name: <%= @owner.name %></h3>
<h3>Email: <%= @owner.email %></h3>
<h3>Home State: <%= @owner.home_state %></h3>
<h3>Description: <%=  @owner.about_me %></h3>
<h3>Dogs: </h3>
<br>
<div class="dog-box">
  <% @owner.dogs.each do |dog| %>
    <div class="dog-tile">
      <% #ADD PHOTO %>
      <h4><%= dog.name %>, <%= dog.age %></h4>
      <h4><%= dog.breed %></h4>
      <%= link_to 'Edit dog info', edit_dog_path(dog.id) %>
      
      <%= button_to "Remove Dog", dog_path(dog.id), method: :delete %>
    </div>
  <% end %>
</div>
<h2><a href=<%= new_dog_path %>>Add a Dog!</a></h2>
<h4><%= link_to 'Edit your info', edit_owner_path(@owner.id) %></h4>
<h2><%= link_to 'Remove Account', owner_session_path(@owner.id), method: :delete %></h2>
